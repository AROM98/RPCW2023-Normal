extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Institution info: #{c._id}
      h2 #{c.NomeInstituicao}
    .w3-container
      table.w3-table-all
        tr
          th Id
          th DataInicioContrato
          th DataFimContrato
          th NomeInstituicao
          th AreasInvestigacao
        
        each c in contracts
          tr
            td
              a(href="/"+c._id)= c._id
            td= c.DataInicioContrato
            td= c.DataFimContrato
            td
              a(href="/inst/"+c.NIPCInstituicao)= c.NomeInstituicao
            td= c.AreasInvestigacao
              
    footer.w3-container.w3-teal
      h5 Generated by AROM98 @RPCW2023, on #{d}
    